{
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "rules": {
        "no-restricted-syntax": 0,
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "no-param-reassign": [0, { "props": false }],
        "max-len": ["error", 140],
        "newline-per-chained-call": 0,
        "no-underscore-dangle": 0,
        "default-case": 0,
        "guard-for-in": 0,
        "no-continue": 0
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".json"]
            }
        }
    },
    "globals": {
        "describe": true,
        "it": true
    }
}
